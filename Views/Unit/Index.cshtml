@model List<Unit>
    <h2>Единицы измерения</h2>
    <a asp-action="Create">Добавить</a>
    <table>
        <thead>
            <tr><th>Наименование</th><th>Архив</th><th>Действия</th></tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
    {
            <tr>
                <td>@item.Name</td>
                <td>@(item.IsArchived ? "Да" : "Нет")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a>
                    @if (!item.IsArchived)
          {
                    <a asp-action="Archive" asp-route-id="@item.Id">Архивировать</a>
          }
                </td>
            </tr>
    }
        </tbody>
    </table>
